<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreatePrintMediaCollectableController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <children>
            <StackPane prefHeight="150.0" prefWidth="200.0" />
            <HBox>
               <children>
                  <GridPane alignment="CENTER_LEFT" hgap="10.0" prefWidth="380.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="95.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="308.0" minWidth="10.0" prefWidth="275.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Item Name:" />
                        <Label text="Price:" GridPane.rowIndex="1" />
                        <Label text="Condition:" GridPane.rowIndex="2" />
                        <Label text="Category:" GridPane.rowIndex="3" />
                        <TextField fx:id="itemNameTextField" maxWidth="200.0" GridPane.columnIndex="1" />
                        <ComboBox fx:id="itemConditionComboBox" maxWidth="200.0" promptText="Select Item Condition" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <ComboBox fx:id="itemCategoryComboBox" maxWidth="200.0" promptText="Select Item Category" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Spinner fx:id="itemPriceSpinner" maxWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
                  <GridPane hgap="10.0" prefWidth="380.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="114.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="256.0" minWidth="10.0" prefWidth="256.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Author:" />
                        <Label text="Illustrator:" GridPane.rowIndex="1" />
                        <Label text="Publisher:" GridPane.rowIndex="2" />
                        <Label text="Page Count:" GridPane.rowIndex="3" />
                        <TextField fx:id="authorTextField" maxWidth="200.0" GridPane.columnIndex="1" />
                        <TextField fx:id="illustratorTextField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="publisherTextField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Spinner fx:id="pageCountSpinner" maxWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
